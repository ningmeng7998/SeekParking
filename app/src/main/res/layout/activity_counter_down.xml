                <!--android:text="Parking Spot :  ( ID : 9615 )"-->
                <!--android:textColor="@color/quantum_bluegrey900"-->
                <!--android:textSize="20sp"-->
                <!--android:textStyle="bold" />-->

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/txt_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="start"
                android:text=""
                android:textColor="@color/quantum_black_text"
                android:textSize="16sp"
                android:textStyle="normal" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Cancel"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:drawableStart="@drawable/timer_stop_small"
                    android:drawablePadding="2px"
                    android:background="@drawable/rounded_edge4"
                    android:text="Stop Timer"
                    android:layout_alignParentStart="true"
                    android:textAllCaps="false"
                    android:textColor="@color/quantum_white_text" />

                <Button
                    android:id="@+id/btn_find_car"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:drawableStart="@drawable/google_icon"
                    android:background="@drawable/rounded_edge4"
                    android:text="Find my car"
                    android:textAlignment="center"
                    android:textColor="@color/quantum_white_text"
                    android:layout_alignParentEnd="true"
                    android:textAllCaps="false"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>